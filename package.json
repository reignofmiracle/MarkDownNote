{
  "name": "markdownnote",
  "productName": "MarkdownNote",
  "version": "1.0.0",
  "description": "simple markdown note",
  "main": "dist/main/index.js",
  "scripts": {
    "test": "eslint src/**/*.js src/**/*.jsx",
    "compile": "webpack",
    "watch": "webpack --watch",
    "start": "electron .",
    "copy:release_resources": "cpx \"release_resources/**/*\" dist",
    "copy:photon": "cpx \"node_modules/photon/dist/css/**/*\" dist/css && cpx \"node_modules/photon/dist/fonts/**/*\" dist/fonts",
    "bundle": "npm run copy:release_resources && npm run copy:photon",
    "build:osx": "build --mac",
    "build:linux32": "build --linux --ia32",
    "build:linux64": "build --linux --x64",
    "build:win32": "build --win --ia32",
    "build:win64": "build --win --x64"
  },
  "repository": "https://github.com/reignofmiracle/MarkdownNote",
  "keywords": [
    "Electron",
    "MarkDown"
  ],
  "author": "reignofmiracle@gmail.com",
  "license": "MIT",
  "build": {
    "productName": "MarkdownNote",
    "appId": "com.beycat.MarkdownNote",
    "asar": true,
    "protocols": {
      "name": "MarkdownNote",
      "schemes": [
        "MarkdownNote"
      ]
    },
    "mac": {
      "target": [
        "default"
      ],
      "icon": "./icon/MarkdownNote.icns"
    },
    "dmg": {
      "title": "MarkdownNote",
      "icon": "./icon/MarkdownNote.icns"
    },
    "win": {
      "target": [
        "zip",
        "nsis",
        "portable"
      ],
      "icon": "./icon/MarkdownNote.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm",
        "zip",
        "tar.gz"
      ],
      "icon": "./icon"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "directories": {
      "buildResources": "icon/",
      "output": "release/",
      "app": "dist/"
    }
  },
  "dependencies": {
    "marked": "^0.3.17",
    "npm": "^5.7.1",
    "photon": "github:connors/photon",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "restore": "^0.3.0"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "cpx": "^1.5.0",
    "css-loader": "^0.28.10",
    "electron": "^1.8.3",
    "electron-builder": "^20.4.1",
    "eslint": "^4.18.2",
    "eslint-plugin-react": "^7.7.0",
    "style-loader": "^0.20.3",
    "webpack": "^4.1.1",
    "webpack-cli": "^2.0.11"
  }
}
